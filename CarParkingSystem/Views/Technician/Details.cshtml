@model CarParkingSystem.Models.FaultReport

@{
    ViewData["Title"] = "Fault Report Details";
}

<h2>Fault Report Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Date Time
        </dt>
        <dd class="col-sm-10">
            @Model.DateTime
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>
</div>

<div>
    <form asp-action="ConfirmFault" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-success">Yes, this fault exists</button>
    </form>
    <form asp-action="DenyFault" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">No, this fault does not exist</button>
    </form>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
