<!DOCTYPE html>
<html lang="en">
<head>
    <base href="../../">
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="~/Webapp/assets/media/images/logo.jpg" type="image/x-icon">
    <!-- custom styling -->
    <link rel="stylesheet" href="~/Webapp/assets/css/style.css" />
    <!-- bootstrap  -->
    <link rel="stylesheet" href="~/Webapp/assets/css/bootstrap.min.css" />
    <!-- icons -->
    <link rel="stylesheet" href="~/Webapp/assets/icons/fontawesome/css/all.min.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet">

    <!-- dropzone -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.2/dropzone.min.css" rel="stylesheet">

    <title>Car Parking - @ViewData["Title"]</title>
</head>
<body>
    <div class="content">
        <div class="rana-form-template">
            <div class="head">
                <div class="row align-items-center">
                    <div class="col-auto px-0">
                        <img src="~/Webapp/assets/media/images/logo.jpg" style="height: 100px;" />
                    </div>
                    <div class="col px-0">
                        <h1 class="org-heading">Futureville</h1>
                    </div>
                </div>
                <div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="navbar-list">
                            <ul>
                                <li><a asp-action="Logout" asp-controller="Login">Logout</a></li>
                                <li><a asp-action="ActiveParkingPermit" asp-controller="AdminDashboard">Permits</a></li>
                                <li><a asp-action="ActiveReservation" asp-controller="AdminDashboard">Reservations</a></li>
                                <li><a asp-action="ParkingHistory" asp-controller="AdminDashboard">History</a></li>
                                <li><a asp-action="Index" asp-controller="Bays">Bays</a></li>
                                <li><a asp-action="Index" asp-controller="Vehicle">Vehicles</a></li>
                                <li><a asp-action="Index" asp-controller="License">Licences</a></li>
                                <li><a asp-action="UserList" asp-controller="AddUser">Users</a></li>
                                <li><a asp-action="UserFeedback" asp-controller="AdminDashboard">Feedback</a></li>
                                <li><a asp-action="Index" asp-controller="Schedule">Schedule</a></li>
                                <li><a asp-action="PendingEvent" asp-controller="AdminDashboard">Booking</a></li>
                                <li><a asp-action="StudentAppeal" asp-controller="AdminDashboard">Appeals</a></li>
                                <li><a asp-action="Index" asp-controller="AdminFaultReports">Fault Reports</a></li>
                                <li><a asp-action="Index" asp-controller="AdminShifts">Guard Shifts</a></li>
                                <li><a asp-action="Index" asp-controller="AdminAssign">Assign Guard Shifts</a></li>
                                <li><a asp-action="Assigned" asp-controller="AdminShifts">Unassign Guard Shifts</a></li>
                                <li><a href="/html/admin.html">Shift Schedule</a></li>
                            </ul>
                        </div>
                    }
                    else if (User.IsInRole("Student"))
                    {
                        <div class="navbar-list">
                            <ul>
                                <li><a asp-action="Logout" asp-controller="Login">Logout</a></li>
                                <li><a asp-action="PurchasePermit" asp-controller="StudentDashboard">Permits</a></li>
                                <li><a asp-action="Reservation" asp-controller="StudentDashboard">Reservations</a></li>
                                <li><a asp-action="ParkingHistory" asp-controller="StudentDashboard">History</a></li>
                                <li><a asp-action="Availabilty" asp-controller="StudentDashboard">Availability</a></li>
                                <li><a asp-action="StudentReview" asp-controller="StudentDashboard">Feedback</a></li>
                                <li><a asp-action="Index" asp-controller="EventBooking">Booking</a></li>
                                <li><a asp-action="StudentViolation" asp-controller="StudentDashboard">Violations</a></li>
                                <li><a asp-action="Create" asp-controller="FaultReports">Report a Fault</a></li>
                            </ul>
                        </div>
                    }
                    else if (User.IsInRole("Guard"))
                    {
                        <div class="navbar-list">
                            <ul>
                                <li><a asp-action="Logout" asp-controller="Login">Logout</a></li>
                                <li><a asp-action="Permitverification" asp-controller="GuardDashboard">Allocate</a></li>
                                <li><a asp-action="DeallocateBay" asp-controller="GuardDashboard">Deallocate</a></li>
                                <li><a asp-action="ActiveReservation" asp-controller="GuardDashboard">Reservations</a></li>
                                <li><a asp-action="ParkingHistory" asp-controller="GuardDashboard">History</a></li>
                                <li><a asp-action="Availability" asp-controller="GuardDashboard">Availability</a></li>
                                <li><a asp-action="Visitation" asp-controller="GuardDashboard">Visitations</a></li>
                                <li><a asp-action="StudentPermit" asp-controller="GuardDashboard">QrCode</a></li>
                                <li><a asp-action="GuardSchedule" asp-controller="GuardDashboard">Schedule</a></li>
                                <li><a asp-action="Index" asp-controller="BlackList">BlackList</a></li>
                                <li><a asp-action="BookingNotExist" asp-controller="GuardDashboard">Booking</a></li>
                                <li><a asp-action="ViolationVerification" asp-controller="Violation">Violations</a></li>
                                <li><a asp-action="Index" asp-controller="ParkingBay">Update Sections</a></li>
                                <li><a asp-action="Index" asp-controller="GuardShifts">My Shift Times</a></li>
                                <li><a href="wwwroot/html/guard.html">Shift Check-in</a></li>
                            </ul>
                        </div>
                    }
                    else if (User.IsInRole("Technician"))
                    {
                        <div class="navbar-list">
                            <ul>
                                <li><a asp-action="Logout" asp-controller="Login">Logout</a></li>
                                <li><a asp-action="Index" asp-controller="ParkingBay">Update Sections</a></li>
                                <li><a asp-action="Index" asp-controller="Technician">Fault Reports</a></li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
            <div class="body">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="~/Webapp/assets/icons/fontawesome/js/all.min.js"></script>
    <script src="~/Webapp/assets/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
