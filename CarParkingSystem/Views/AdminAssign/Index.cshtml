@using CarParkingSystem.Areas.Identity.Data

@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Assign Shift";
}

<h2>Assign Shift</h2>

<form asp-action="Assign">
    <div class="form-group">
        <label for="guardId">Guard:</label>
        <select class="form-control" id="guardId" name="guardId">
            @foreach (var guard in ViewBag.Guards)
            {
                <option value="@guard.orgNum">@guard.FirstName @guard.LastName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="shiftId">Shift:</label>
        <select class="form-control" id="shiftId" name="shiftId">
            @foreach (var shift in ViewBag.Shifts)
            {
                <option value="@shift.Id">@shift.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Assign</button>
</form>
